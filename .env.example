# Environment Variables for Arbitrum Deployment

# Private key of the deployer account (NEVER commit this to version control)
PRIVATE_KEY=your_private_key_here

# RPC URLs for Arbitrum networks
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_MAINNET_RPC_URL=https://arb1.arbitrum.io/rpc

# Alternative RPC providers (optional)
# ALCHEMY_API_KEY=your_alchemy_api_key
# INFURA_API_KEY=your_infura_api_key
# ARBITRUM_SEPOLIA_RPC_URL=https://arb-sepolia.g.alchemy.com/v2/${ALCHEMY_API_KEY}
# ARBITRUM_MAINNET_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# Arbiscan API key for contract verification
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Gas reporting
REPORT_GAS=true

# Deployment configuration
DEPLOY_NETWORK=arbitrumSepolia
DEPLOYER_ADDRESS=your_deployer_address_here

# Initial entity addresses (optional - can be set after deployment)
INITIAL_DOCTOR_ADDRESS=
INITIAL_INSURANCE_ADDRESS=
INITIAL_AUDITOR_ADDRESS=
